@model IEnumerable<StockClient.Models.Stock>

@{
    ViewData["Title"] = "Stock List";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Symbol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-route-inputSymbol="@item.Symbol">@Html.DisplayFor(modelItem => item.Symbol)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastPrice)
            </td>
            <td>
                <a asp-action="OpenTrade" asp-controller="UserTrades" asp-route-symbol="@item.Symbol">Trade</a>
            </td>
        </tr>
}
    </tbody>
</table>
